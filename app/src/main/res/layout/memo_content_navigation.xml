<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_speak"
        android:src="@drawable/ic_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_alarm"
        app:layout_constraintEnd_toEndOf="@id/iv_alarm"
        app:layout_constraintTop_toTopOf="@id/iv_alarm"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_alarm"
        android:src="@drawable/ic_alarm_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_todo"
        app:layout_constraintEnd_toEndOf="@id/iv_todo"
        app:layout_constraintTop_toTopOf="@id/iv_todo"
        app:layout_constraintStart_toStartOf="@id/iv_speak"/>

    <ImageView
        android:id="@+id/iv_todo"
        android:src="@drawable/ic_assignment_turned_in_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_voice"
        app:layout_constraintEnd_toEndOf="@id/iv_voice"
        app:layout_constraintTop_toTopOf="@id/iv_voice"
        app:layout_constraintStart_toStartOf="@id/iv_alarm"/>

    <ImageView
        android:id="@+id/iv_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/ic_keyboard_voice_black_24dp"
        android:drawablePadding="5dp"
        android:onClick="voice_btn_click"
        app:layout_constraintBottom_toBottomOf="@id/iv_todo"
        app:layout_constraintEnd_toEndOf="@id/iv_save"
        app:layout_constraintTop_toTopOf="@id/iv_todo"
        app:layout_constraintStart_toStartOf="@id/iv_todo" />

    <ImageView
        android:id="@+id/iv_save"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_todo"
        app:layout_constraintStart_toStartOf="@id/iv_voice"/>

</androidx.constraintlayout.widget.ConstraintLayout>