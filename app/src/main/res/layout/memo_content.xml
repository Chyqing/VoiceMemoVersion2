<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include android:id="@+id/edit_toolbar"
        layout="@layout/edit_toolbar"/>

    <LinearLayout android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_memo_title"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="请输入主题"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_time"
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="24dp"
            android:layout_below="@id/tv_title" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/sv_content"
        android:layout_below="@id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_memo_content"
            android:layout_width="300dp"
            android:hint="请输入..."
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:background="@null"
            android:layout_gravity="center_horizontal"/>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/memo_content_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/sv_content"
        android:background="?android:attr/windowBackground" />

</RelativeLayout>